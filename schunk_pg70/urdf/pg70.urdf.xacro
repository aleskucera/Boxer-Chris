<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro"> 
  <property name="PI" value="3.1415926535897931" />
  <xacro:macro name="schunk_pg70" params="parent name *origin ">

    <joint name="${name}_base_joint" type="fixed" >
      <parent link="${parent}" />
      <child link="${name}_base_link" />
      <xacro:insert_block name="origin" />
    </joint>

<!--     PALM -->
    
    <link name="${name}_base_link">
      <visual>
        <geometry>
          <mesh filename="package://schunk_pg70/meshes/pg70.dae" />
        </geometry>
        <material name="blue">
          <color rgba="0 0 1 1"/>
        </material>
      </visual>
      <collision>
        <geometry>
          <mesh filename="package://schunk_pg70/meshes/pg70.dae" />
        </geometry>
	<material name="blue"/>
      </collision>
    </link>

<!-- LEFT FINGER BASE -->
    
    <joint name="${name}_finger_left_joint" type="prismatic" >
      <parent link="${name}_base_link" />
      <child link="${name}_fingertip_left_link" />
      <limit effort="100" lower="0.0005" upper="0.033" velocity="2.0"/>
      <origin xyz="0 0.008 0.0725" rpy="0 0 0"/>
      <axis xyz="0 1 0" />
    </joint>

    <link name="${name}_fingertip_left_link">
      <visual>
        <geometry>
			<mesh filename="package://schunk_pg70/meshes/gripper_claw.stl" scale="0.001 0.001 0.001"/>
        </geometry>
		<origin rpy="0 0 ${PI/2}"/>
        <material name="silver">
          <color rgba="0.8 0.8 0.8 1"/>
        </material>
      </visual>
      <collision>
        <geometry>
			<mesh filename="package://schunk_pg70/meshes/gripper_claw.stl" scale="0.001 0.001 0.001"/>
        </geometry>
		<origin rpy="0 0 ${PI/2}"/>
		<material name="black">
          <color rgba="1 0 0 1"/>
		</material>
      </collision>
    </link>
    
<!-- RIGHT FINGER BASE -->

    <joint name="${name}_finger_right_joint" type="prismatic" >
      <mimic joint="${name}_finger_left_joint" />
      <parent link="${name}_base_link" />
      <child link="${name}_fingertip_right_link" />
      <limit effort="1000" lower="0.0005" upper="0.033" velocity="2.0"/>
      <origin xyz="0 -0.008 0.0725" rpy="-0 0 0"/>
      <axis xyz="0 -1 0" />
    </joint>

    <link name="${name}_fingertip_right_link">
      <visual>
        <geometry>
			<mesh filename="package://schunk_pg70/meshes/gripper_claw.stl" scale="0.001 0.001 0.001"/>
		</geometry>
		<origin rpy="0 0 ${-PI/2}"/>
	<material name="silver" />
       
      </visual>
      <collision>
        <geometry>
			<mesh filename="package://schunk_pg70/meshes/gripper_claw.stl" scale="0.001 0.001 0.001"/>
        </geometry>
		<origin rpy="0 0 ${-PI/2}"/>
	<material name="black"/>
     </collision>
    </link>

 <!-- black box on the side of the gripper -->
 <link name="${name}_side_box">
   <visual>
      <geometry>	  
	<box size="0.03185 0.0669 0.06399"/>
      </geometry>
    <origin xyz="0 0 0"/>
    <material name="black">
	<color rgba="0.1225 0.1225 0.1255 1"/>
    </material>
   </visual>
   <collision>
      <geometry>
	<box size="0.03185 0.0669 0.06399"/>
      </geometry>
      	<origin xyz="0 0 0"/>
   </collision>
  </link>

  <joint name="box_to_base" type="fixed">
    <axis xyz="1 0 0"/>
	<parent link="${name}_base_link"/>
	<child link="${name}_side_box"/>
	<origin xyz="0 -0.072 0.03"  rpy="0 0 ${PI/2}"/> 
  </joint>


  <transmission name="${name}_tran1">
      <type>transmission_interface/SimpleTransmission</type>
	  <joint name="${name}_finger_left_joint">
          <hardwareInterface>PositionJointInterface</hardwareInterface>
      </joint>
	  <actuator name="${name}_motor1">
          <hardwareInterface>PositionJointInterface</hardwareInterface>
      </actuator>
  </transmission>

  <transmission name="${name}_tran2">
      <type>transmission_interface/SimpleTransmission</type>
	  <joint name="${name}_finger_right_joint">
          <hardwareInterface>PositionJointInterface</hardwareInterface>
      </joint>
	  <actuator name="${name}_motor2">
          <hardwareInterface>PositionJointInterface</hardwareInterface>
      </actuator>
  </transmission>

  </xacro:macro>
</robot>

